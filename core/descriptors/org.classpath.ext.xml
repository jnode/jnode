<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plugin SYSTEM "jnode.dtd">

<fragment id="org.classpath.ext"
  name="Core java classes"
  version="@VERSION@"
  plugin-id="org.classpath.core"
  plugin-version="@VERSION@"
  provider-name="Classpath"
  provider-url="http://classpath.org"
  license-name="classpath">

  <runtime>
    <library name="jnode-core.jar">

      <export name="gnu.javax.security.auth.callback.*"/>
      <export name="gnu.javax.security.auth.login.*"/>

      <export name="gnu.javax.swing.text.html.parser.*"/>
      <export name="gnu.javax.swing.text.html.parser.models.*"/>
      <export name="gnu.javax.swing.text.html.parser.support.*"/>
      <export name="gnu.javax.swing.text.html.parser.support.low.*"/>

      <export name="gnu.javax.swing.plaf.gnu.*"/>  

      <export name="javax.net.*"/>
      <export name="javax.net.ssl.*"/>

      <export name="javax.security.*"/>
      <export name="javax.security.auth.*"/>
      <export name="javax.security.auth.callback.*"/>
      <export name="javax.security.auth.login.*"/>
      <export name="javax.security.auth.spi.*"/>
      <export name="javax.security.cert.*"/>
      <export name="javax.security.sasl.*"/>

      <export name="javax.swing.*"/>
      <export name="javax.swing.border.*"/>
      <export name="javax.swing.colorchooser.*"/>
      <export name="javax.swing.event.*"/>
      <export name="javax.swing.filechooser.*"/>
      <export name="javax.swing.plaf.*"/>
      <export name="javax.swing.plaf.basic.*"/>
      <export name="javax.swing.plaf.metal.*"/>
      <export name="javax.swing.table.*"/>
      <export name="javax.swing.text.*"/>
      <export name="javax.swing.text.html.*"/>
      <export name="javax.swing.text.html.parser.*"/>
      <export name="javax.swing.text.rtf.*"/>
      <export name="javax.swing.tree.*"/>
      <export name="javax.swing.undo.*"/>
      
      <export name="org.ietf.jgss.*"/>
    </library>
  </runtime>
  
  <extension point="org.jnode.security.permissions">
	  <permission class="java.util.PropertyPermission" name="gnu.javax.swing.DebugGraphics" actions="read"/>
  </extension>       
</fragment>
