      <export name="javax.swing.plaf.multi.*"/>
      <export name="javax.swing.plaf.synth.*"/>
      <export name="javax.swing.table.*"/>
      <export name="javax.swing.text.*"/>
      <export name="javax.swing.text.html.*"/>
      <export name="javax.swing.text.html.parser.*"/>
      <export name="javax.swing.text.rtf.*"/>
      <export name="javax.swing.tree.*"/>
      <export name="javax.swing.undo.*"/>
      
      <export name="org.ietf.jgss.*"/>

      <export name="com.sun.java.swing.plaf.windows.DesktopProperty"/>
      <export name="com.sun.java.swing.plaf.motif.*"/>
      <export name="com.sun.java.swing.plaf.motif.icons.*"/>
