<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plugin SYSTEM "jnode.dtd">

<plugin id="org.jmock" 
        name="JMock classes"
        version="1.0.1"
        provider-name="JMock"
        provider-url="http://jmock.org"
        license-name="JMock"
        license-url="http://jmock.org/license.html">

  <requires>        
	<import plugin="org.junit"/>
  </requires>
        
  <runtime>
    <library name="jmock-1.0.1.jar">
      <export name="*"/>
    </library>
  </runtime>        

  <extension point="org.jnode.security.permissions">
	<permission class="java.io.FilePermission" name="&lt;&lt;ALL FILES&gt;&gt;" actions="delete"/>
  </extension>     
</plugin>