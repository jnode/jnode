<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plugin SYSTEM "jnode.dtd">

<plugin id="org.jnode.driver.chipset"
        name="JNode chipset drivers"
        version="@VERSION@"
        provider-name="ozog.com">

  <requires>
    <import plugin="org.jnode.driver"/>
    <import plugin="org.jnode.driver.ide"/>
    <import plugin="org.jnode.driver.pci"/>
  </requires>

  <runtime>
    <library name="jnode-core.jar">
      <export name="org.jnode.driver.chipset.*"/>
      <export name="org.jnode.driver.chipset.i440BX.*"/>
    </library>
  </runtime>

  <extension point="org.jnode.driver.mappers">
    <mapper class="org.jnode.driver.chipset.i440BX.i440BXDeviceToDriverMapper"/>
  </extension>

</plugin>