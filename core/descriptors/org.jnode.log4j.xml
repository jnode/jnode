<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plugin SYSTEM "jnode.dtd">

<plugin id="org.jnode.log4j" 
        name="JNode Log4j setup"
        version="@VERSION@"
        provider-name="JNode.org"
        license-name="lgpl"
        class="org.jnode.log4j.config.Log4jConfigurePlugin">
        
  <requires>
    <import plugin="org.jnode.driver.console"/>
  </requires>
        
  <runtime>
    <library name="jnode-core.jar">
      <export name="org.jnode.log4j.config.*"/>
    </library>
  </runtime>
        
</plugin>