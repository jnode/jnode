<!DOCTYPE plugin SYSTEM "jnode.dtd">

<plugin id="org.jnode.vm" 
        name="JNode VM-X86 classes"
        version="@VERSION@"
        system="true"
        license-name="lgpl"
        provider-name="JNode.org">
        
  <requires>
    <import plugin="org.jnode.vm.core"/>
  </requires>
        
  <runtime>
    <library name="jnode-core.jar">
      <export name="org.jnode.assembler.x86.*"/>
      <export name="org.jnode.vm.x86.*"/>
      <export name="org.jnode.vm.x86.compiler.*"/>
      <export name="org.jnode.vm.x86.compiler.stub.*"/>
      <export name="org.jnode.vm.x86.compiler.l1a.*"/>
      <export name="org.jnode.vm.x86.compiler.l1b.*"/>
      <export name="org.jnode.vm.x86.performance.*"/>
    </library>
  </runtime>
        
</plugin>
