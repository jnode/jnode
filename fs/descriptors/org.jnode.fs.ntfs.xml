<!DOCTYPE plugin SYSTEM "jnode.dtd">

<plugin id="org.jnode.fs.ntfs" 
        name="JNode NTFS FileSystem"
        version="@VERSION@"
        license-name="lgpl"
        provider-name="JNode.org">
        
  <requires>
    <import plugin="org.jnode.fs"/>
    <import plugin="org.jnode.partitions.ibm"/>
  </requires>
        
  <runtime>
    <library name="jnode-fs.jar">
      <export name="org.jnode.fs.ntfs.*"/>
      <export name="org.jnode.fs.ntfs.attribute.*"/>
      <export name="org.jnode.fs.ntfs.index.*"/>
      <export name="org.jnode.fs.ntfs.logfile.*"/>
      <export name="org.jnode.fs.ntfs.security.*"/>
    </library>
  </runtime>
  
  <extension point="org.jnode.fs.types">
    <type class="org.jnode.fs.ntfs.NTFSFileSystemType"/>
  </extension>
  
</plugin>
