<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plugin SYSTEM "jnode.dtd">

<plugin id="org.jnode.driver.ps2"
        name="JNode PS2 Keyobard and Mouse driver interface"
        version="@VERSION@"
        provider-name="JNode.org">

  <requires>
    <import plugin="org.jnode.driver"/>
    <import plugin="org.jnode.driver.input"/>
  </requires>

  <runtime>
    <library name="jnode-gui.jar">
      <export name="org.jnode.driver.ps2.*"/>
    </library>
  </runtime>

  <extension point="org.jnode.driver.finders">
    <mapper class="org.jnode.driver.ps2.PS2Finder"/>
  </extension>

  <extension point="org.jnode.security.permissions">
    <permission class="org.jnode.system.ResourcePermission" name="ioports"/>
  </extension>
        
</plugin>
