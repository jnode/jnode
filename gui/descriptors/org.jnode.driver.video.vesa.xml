<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plugin SYSTEM "jnode.dtd">

<plugin id="org.jnode.driver.video.vesa" 
        name="JNode Video VESA driver"
        version="@VERSION@"
        license-name="lgpl"
        provider-name="JNode.org"
        class="org.jnode.driver.video.vesa.VESAPlugin"
        auto-start="true">
        
  <requires>
    <import plugin="org.jnode.awt"/>
    <!-- import plugin="org.jnode.driver"/ -->
    <import plugin="org.jnode.driver.bus.pci"/>
    <import plugin="org.jnode.driver.video"/>
  </requires>
        
  <runtime>
    <library name="jnode-gui.jar">
      <export name="org.jnode.driver.video.vesa.*"/>
    </library>
  </runtime>

  <extension point="org.jnode.driver.mappers">
    <!-- laptop Ideo Technologies -->
	<mapper id="03:00:00" driver-class="org.jnode.driver.video.vesa.VESADriver" class="org.jnode.driver.bus.pci.PCIClassToDriverMapper"/>
  </extension>
        
  <extension point="org.jnode.security.permissions">
    <permission class="org.jnode.system.ResourcePermission" name="ioports"/>
  </extension>
                
  <extension point="org.jnode.shell.aliases">
    <alias name="vesa" class="org.jnode.driver.video.vesa.VESACommand"/>
  </extension>
        
</plugin>