<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plugin SYSTEM "jnode.dtd">

<plugin id="org.jnode.driver.net.bcm570x"
  name="JNode Broadcom 570x driver"
  version="@VERSION@"
        license-name="lgpl"
  provider-name="JNode.org">

  <requires>
    <import plugin="org.jnode.driver.pci"/>
    <import plugin="org.jnode.driver.net.ethernet"/>
    <import plugin="org.jnode.net"/>
  </requires>

  <runtime>
    <library name="jnode-net.jar">
      <export name="org.jnode.driver.net.bcm570x.*"/>
    </library>
  </runtime>

  <extension point="org.jnode.driver.mappers">
    <!-- mapper class="org.jnode.driver.net.bcm570x.BCM570xDeviceToDriverMapper"/ -->
    <mapper id="14E4:165D" name="Broadcom Corp NetXtreme Gigabit Ethernet" driver-class="org.jnode.driver.net.bcm570x.BCM570xDriver" class="org.jnode.driver.pci.PCIDeviceToDriverMapper"/>

  </extension>

  <extension point="org.jnode.security.permissions">
    <permission class="org.jnode.system.ResourcePermission" name="ioports"/>
  </extension>

</plugin>