<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plugin SYSTEM "jnode.dtd">

<plugin id="org.jnode.driver.net.eepro100" 
        name="JNode Intel EEPRO100 driver"
        version="@VERSION@"
        provider-name="JNode.org">
        
  <requires>
    <import plugin="org.jnode.driver"/>
    <import plugin="org.jnode.driver.net.ethernet"/>
    <import plugin="org.jnode.net"/>
	<import plugin="org.jnode.driver.pci"/> 
  </requires>
        
  <runtime>
    <library name="jnode-net.jar">
      <export name="org.jnode.driver.net.eepro100.*"/>
    </library>
  </runtime>
  
  <extension point="org.jnode.driver.mappers">
    <!-- <mapper class="org.jnode.driver.net.eepro100.EEPRO100DeviceToDriverMapper"/> -->
    <mapper id="1229:8086" name="Intel PCI EtherExpress Pro100" driver-class="org.jnode.driver.net.eepro100.EEPRO100Driver" class="org.jnode.driver.pci.PCIDeviceToDriverMapper"/>
    <mapper id="1209:8086" name="Intel EtherExpress Pro/100+ i82559ER" driver-class="org.jnode.driver.net.eepro100.EEPRO100Driver" class="org.jnode.driver.pci.PCIDeviceToDriverMapper"/>
    <mapper id="1029:8086" name="Intel EtherExpress Pro/100 type 1029" driver-class="org.jnode.driver.net.eepro100.EEPRO100Driver" class="org.jnode.driver.pci.PCIDeviceToDriverMapper"/>
    <mapper id="1030:8086" name="Intel EtherExpress Pro/100 type 1030" driver-class="org.jnode.driver.net.eepro100.EEPRO100Driver" class="org.jnode.driver.pci.PCIDeviceToDriverMapper"/>
    <mapper id="2449:8086" name="Intel Pro/100 V Network" driver-class="org.jnode.driver.net.eepro100.EEPRO100Driver" class="org.jnode.driver.pci.PCIDeviceToDriverMapper"/>
  </extension>
        
  <extension point="org.jnode.security.permissions">
    <permission class="org.jnode.system.ResourcePermission" name="ioports"/>
  </extension>
        
</plugin>