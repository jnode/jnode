<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plugin SYSTEM "jnode.dtd">

<plugin id="org.jnode.driver.net.lance" 
        name="JNode AMD Lance driver"
        version="@VERSION@"
        provider-name="JNode.org">
        
  <requires>
    <import plugin="org.jnode.driver"/>
    <import plugin="org.jnode.driver.net.ethernet"/>
    <import plugin="org.jnode.net"/>
	<import plugin="org.jnode.driver.pci"/> 
  </requires>
        
  <runtime>
    <library name="jnode-net.jar">
      <export name="org.jnode.driver.net.lance.*"/>
    </library>
  </runtime>
  
  <extension point="org.jnode.driver.mappers">
    <!-- mapper class="org.jnode.driver.net.lance.LanceDeviceToDriverMapper"/ -->
    <mapper id="1022:2000" name="AMD PCnet32 LANCE" driver-class="org.jnode.driver.net.lance.LanceDriver" class="org.jnode.driver.pci.PCIDeviceToDriverMapper"/>
  </extension>
        
  <extension point="org.jnode.security.permissions">
    <permission class="org.jnode.system.ResourcePermission" name="ioports"/>
  </extension>
        
</plugin>