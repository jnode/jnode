<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plugin SYSTEM "jnode.dtd">

<plugin id="org.jnode.shell.command.system" 
        name="JNode System Commands"
        version="@VERSION@"
        license-name="lgpl"
        provider-name="JNode.org">
        
  <requires>
    <import plugin="org.jnode.shell.help"/>
  </requires>
        
  <runtime>
    <library name="jnode-shell.jar">
      <export name="org.jnode.shell.command.system.*"/>
    </library>
  </runtime>
        
  <extension point="org.jnode.shell.aliases">
  	<alias name="cpuid"        class="org.jnode.shell.command.system.CpuIDCommand"/>
	<alias name="kdb"          class="org.jnode.shell.command.system.KdbCommand"/>
	<alias name="lsirq"        class="org.jnode.shell.command.system.LsIRQCommand"/>
	<alias name="vminfo"       class="org.jnode.shell.command.system.VmInfoCommand"/>
  </extension>
  
  <extension point="org.jnode.shell.syntaxes">
    <syntax alias="cpuid" description="dump the system's CPU ID information"/>
    <syntax alias="kdb">
      <empty description="show current kernel debugging state"/>
      <option argLabel="off" longName="off" description="Turn kernel debugging off"/>
      <option argLabel="on" longName="on" description="Turn kernel debugging on"/>
    </syntax>
    <syntax alias="vminfo">
      <optional description="dump IRQ handler information">
        <option argLabel="reset" longName="reset"/>
      </optional>
    </syntax>
  </extension>

</plugin>
